{% extends 'base.twig' %}
{% block content %}
	<div class="container py-5">
		<div class="d-flex justify-content-end">
			<a href="/todolist_php/public/task/new" class="btn btn-outline-dark">
				nouvelle tâche
			</a>
		</div>
		{% for task in tasks %}
			<div class="card my-2">
				<div class="card-body">
					<div class="d-flex justify-content-between">
						<div>
							{{ task.title }}
							<span class="badge text-bg-warning">{{task.status}}</span>
						</div>
						<div class="d-flex">
							<div>
								<a href="/todolist_php/public/task/{{task.id}}" class="btn btn-outline-success mx-2">voir</a>
							</div>
							<div>
								<a href="/todolist_php/public/task/{{task.id}}/update" class="btn btn-outline-warning mx-2">modifier</a>
							</div>
							<div>
								<a href="/todolist_php/public/task/{{task.id}}/delete" 
								onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche');" 
								class="btn btn-outline-danger mx-2">supprimer</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}